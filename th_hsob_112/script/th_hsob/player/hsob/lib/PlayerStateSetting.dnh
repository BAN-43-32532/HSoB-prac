//------------------------------------------------------------------------------------------------------------
function GetZSpellDamage()
{
	if (IsRainbow()) { return(ZSpellDamage*0.5); }
	else { return(ZSpellDamage); }
}
function GetZSpellLevel()
{
	if (IsRainbow()) { return(1); }
	else { return(8); }
}

