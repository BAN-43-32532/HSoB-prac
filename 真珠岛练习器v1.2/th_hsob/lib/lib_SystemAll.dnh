// 2DÀ•W‚Ì‰ñ“]
function Rotate2D_X(x, y, angle) { return( x*cos(angle) - y*sin(angle) ); }
function Rotate2D_Y(x, y, angle) { return( x*sin(angle) + y*cos(angle) ); }
function Rotate2D_XY(x, y, angle)
{
	let s = sin(angle);
	let c = cos(angle);
	return( [x*c-y*s, x*s+y*c] );
}

