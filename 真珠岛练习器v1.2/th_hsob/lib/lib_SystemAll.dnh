// ƒWƒOƒUƒO‚ÈŠ´‚¶‚Ì’l‚ğ•Ô‚·(0`max‚Ì”ÍˆÍ)
function GetZigZag(val, max)
{
	let tmp = val%(max*2);
	if (tmp <= max) { return(tmp); }
	else { return(max*2-tmp); }
}

