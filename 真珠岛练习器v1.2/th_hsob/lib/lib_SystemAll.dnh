//  ================================ wait関数群
//待機
function wait(n) { loop(n) { while(IsTimeStop) { yield; } yield; } }
//待機（敵オブジェクトが関わる場合）
function waitObj(obj, n)
{
	loop(n)
	{
		while(IsTimeStopObj(obj)) { yield; }
		yield;
	}
}
//待機（時間停止に影響されない）
function waitEx(n) { loop(n) { yield; } }

